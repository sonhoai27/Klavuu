{
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "build",
      "jsx": "preserve",
      "lib": ["dom", "es2015", "es2016", "es2017"],
      "module": "esnext",
      "moduleResolution": "node",
      "rootDir": "src",
      "sourceMap": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "downlevelIteration": true,
      "removeComments": false,
      "skipLibCheck": true,
      "allowJs": true,
      "checkJs": false,
      "importHelpers": true,
      "paths": {
          "@app/*": ["./src/*"]
      }
    },
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "node_modules",
      "**/*.js",
      "dist",
      "build",
      "webpack",
    ],
    "types": [
      "typePatches"
    ]
  }